  <div class="container mb-5">
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card" style="border: none; box-shadow: 0 2px 12px rgba(0,0,0,0.08); border-radius: 12px; overflow: hidden;">
          <!-- Desktop header -->
          <div class="card-header d-none d-md-block" style="background: linear-gradient(135deg, var(--brand-primary) 0%, #2d4a6f 100%); color: white;">
            <h4 class="mb-0"><i class="bi bi-funnel me-2" style="color: var(--brand-secondary);"></i>Filter Results</h4>
          </div>
          <!-- Mobile collapsible toggle -->
          <button class="filter-toggle-mobile collapsed" type="button" id="filterToggle" aria-expanded="false" aria-controls="filterPanel">
            <span><i class="bi bi-funnel me-2" style="color: var(--brand-secondary);"></i>Filter Results</span>
            <i class="bi bi-chevron-up toggle-icon"></i>
          </button>
          <div class="card-body filter-panel-content collapsed" id="filterPanel">
            <form action="/search" method="GET" class="row g-3" role="search" aria-label="Filter chainhoists">
              <div class="col-md-4">
                <label for="q" class="form-label"><i class="bi bi-search"></i> Search Terms</label>
                <input type="text" class="form-control" id="q" name="q" value="<%= query %>" aria-label="Search terms">
              </div>

              <div class="col-md-4">
                <label for="manufacturer" class="form-label"><i class="bi bi-building"></i> Manufacturer</label>
                <select name="manufacturer" id="manufacturer" class="form-select">
                  <option value="">Any Manufacturer</option>
                  <% manufacturers.forEach(function(manufacturer) { %>
                    <option value="<%= manufacturer %>" <%= filters.manufacturer === manufacturer ? 'selected' : '' %>><%= manufacturer %></option>
                  <% }); %>
                </select>
              </div>

              <div class="col-md-4">
                <label for="capacity" class="form-label"><i class="bi bi-speedometer2"></i> Load Capacity</label>
                <select name="capacity" id="capacity" class="form-select">
                  <option value="">Any Capacity</option>
                  <% capacities.forEach(function(capacity) { %>
                    <option value="<%= capacity %>" <%= filters.capacity === capacity ? 'selected' : '' %>><%= capacity %></option>
                  <% }); %>
                </select>
              </div>

              <div class="col-md-3">
                <label for="classification" class="form-label"><i class="bi bi-award"></i> Classification</label>
                <select name="classification" id="classification" class="form-select">
                  <option value="">Any Classification</option>
                  <% classifications.forEach(function(classification) { %>
                    <option value="<%= classification %>" <%= filters.classification === classification ? 'selected' : '' %>><%= classification.toUpperCase() %></option>
                  <% }); %>
                </select>
              </div>

              <div class="col-md-3">
                <label for="category" class="form-label"><i class="bi bi-tag"></i> Category</label>
                <select name="category" id="category" class="form-select">
                  <option value="">Any Category</option>
                  <% categories.forEach(function(category) { %>
                    <option value="<%= category %>" <%= filters.category === category ? 'selected' : '' %>><%= category %></option>
                  <% }); %>
                </select>
              </div>

              <div class="col-md-3">
                <label for="speedType" class="form-label"><i class="bi bi-lightning"></i> Speed Type</label>
                <select name="speedType" id="speedType" class="form-select">
                  <option value="">Any Speed Type</option>
                  <% speedTypes.forEach(function(speedType) { %>
                    <option value="<%= speedType %>" <%= filters.speedType === speedType ? 'selected' : '' %>><%= speedType %></option>
                  <% }); %>
                </select>
              </div>

              <div class="col-md-3">
                <label for="dutyCycle" class="form-label"><i class="bi bi-clock-history"></i> Duty Cycle</label>
                <select name="dutyCycle" id="dutyCycle" class="form-select">
                  <option value="">Any Duty Cycle</option>
                  <% dutyCycles.forEach(function(dutyCycle) { %>
                    <option value="<%= dutyCycle %>" <%= filters.dutyCycle === dutyCycle ? 'selected' : '' %>><%= dutyCycle %></option>
                  <% }); %>
                </select>
              </div>

              <div class="col-md-3">
                <label for="dataQuality" class="form-label"><i class="bi bi-check2-circle"></i> Data Quality</label>
                <select name="dataQuality" id="dataQuality" class="form-select">
                  <option value="">Any Quality</option>
                  <optgroup label="By Completeness">
                    <option value="tier-complete" <%= filters.dataQuality === 'tier-complete' ? 'selected' : '' %>>Complete (80%+)</option>
                    <option value="tier-partial" <%= filters.dataQuality === 'tier-partial' ? 'selected' : '' %>>Partial (60-79%)</option>
                    <option value="tier-incomplete" <%= filters.dataQuality === 'tier-incomplete' ? 'selected' : '' %>>Incomplete (30-59%)</option>
                    <option value="tier-minimal" <%= filters.dataQuality === 'tier-minimal' ? 'selected' : '' %>>Minimal (&lt;30%)</option>
                  </optgroup>
                  <optgroup label="By Feature">
                    <option value="complete" <%= filters.dataQuality === 'complete' ? 'selected' : '' %>>Has All Critical Specs</option>
                    <option value="hasImages" <%= filters.dataQuality === 'hasImages' ? 'selected' : '' %>>Has Images</option>
                  </optgroup>
                </select>
              </div>

              <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" id="applyBtn" class="btn flex-grow-1" style="background: var(--brand-secondary); color: white;"><i class="bi bi-funnel me-1"></i>Apply Filters</button>
                <% const hasFilters = query || filters.manufacturer || filters.capacity || filters.classification || filters.category || filters.speedType || filters.dutyCycle || filters.dataQuality; %>
                <a href="/search" class="btn btn-outline-secondary <%= !hasFilters ? 'disabled' : '' %>" title="Clear all filters">Clear</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

