        if (query && excludeFilter !== 'q') params.set('q', query);
        if (filters.manufacturer && excludeFilter !== 'manufacturer') params.set('manufacturer', filters.manufacturer);
        if (filters.capacity && excludeFilter !== 'capacity') params.set('capacity', filters.capacity);
        if (filters.classification && excludeFilter !== 'classification') params.set('classification', filters.classification);
        if (filters.category && excludeFilter !== 'category') params.set('category', filters.category);
        if (filters.speedType && excludeFilter !== 'speedType') params.set('speedType', filters.speedType);
        if (filters.dutyCycle && excludeFilter !== 'dutyCycle') params.set('dutyCycle', filters.dutyCycle);
