<%- include('header') %>

<style>
  .hero-card {
    background: linear-gradient(135deg, #1a365d 0%, #2d4a6f 100%);
    color: white;
    border: none;
  }
  .hero-card .card-title {
    font-size: 2rem;
    font-weight: 700;
  }
  .hero-card .lead {
    font-size: 1.1rem;
    opacity: 0.9;
  }
  .filter-card {
    border: none;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    border-radius: 12px;
    overflow: hidden;
  }
  .filter-card .card-header {
    background: linear-gradient(135deg, var(--brand-primary) 0%, #2d4a6f 100%);
    color: white;
    font-weight: 600;
    padding: 1rem 1.25rem;
  }
  .filter-card .card-header i {
    color: var(--brand-secondary);
    margin-right: 0.5rem;
  }
  .filter-card .list-group-item {
    border: none;
    border-bottom: 1px solid #f0f0f0;
    transition: background-color 0.15s;
  }
  .filter-card .list-group-item:hover {
    background-color: #f8fafc;
  }
  .filter-card .list-group-item.active {
    background: var(--brand-primary);
    border-color: var(--brand-primary);
  }
  .manufacturer-card {
    border: none;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    border-radius: 12px;
    overflow: hidden;
  }
  .manufacturer-card .card-header {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    font-weight: 600;
    color: var(--brand-primary);
    padding: 1rem 1.25rem;
    border-bottom: 2px solid var(--brand-secondary);
  }
  .manufacturer-card .card-header i {
    color: var(--brand-secondary);
    margin-right: 0.5rem;
  }
  .table tbody tr {
    transition: background-color 0.15s;
  }
  .table tbody tr:hover {
    background-color: #f8fafc !important;
  }
  .btn-download {
    background: var(--brand-secondary);
    color: white;
    border: none;
  }
  .btn-download:hover {
    background: #d35400;
    color: white;
  }
  .btn-view {
    background: var(--brand-primary);
    color: white;
    border: none;
  }
  .btn-view:hover {
    background: #0f2644;
    color: white;
  }

  /* Mobile Responsive Styles */
  @media (max-width: 767.98px) {
    /* Hero card - smaller text */
    .hero-card .card-title {
      font-size: 1.5rem;
    }
    .hero-card .lead {
      font-size: 0.95rem;
    }
    .hero-card .card-body {
      padding: 1rem;
    }
    .hero-card .d-flex {
      gap: 0.75rem !important;
    }
    .hero-card i {
      font-size: 2rem !important;
    }

    /* Filter card - horizontal scroll list */
    .filter-card {
      position: static !important;
    }
    .filter-card .card-body {
      max-height: 200px !important;
    }
    .filter-card .card-header {
      padding: 0.75rem 1rem;
    }
    .filter-card .card-header h5 {
      font-size: 1rem;
    }
    .filter-card .list-group-item {
      padding: 0.5rem 0.75rem;
      font-size: 0.875rem;
    }

    /* Manufacturer cards */
    .manufacturer-card .card-header {
      padding: 0.75rem 1rem;
    }
    .manufacturer-card .card-header h5 {
      font-size: 1rem;
    }

    /* Table adjustments */
    .table {
      font-size: 0.8rem;
    }
    .table td, .table th {
      padding: 0.5rem 0.4rem;
    }
    .table th:first-child,
    .table td:first-child {
      padding-left: 0.75rem !important;
    }

    /* Buttons - stack vertically */
    .btn-download, .btn-view {
      display: block;
      width: 100%;
      margin-bottom: 0.25rem;
      font-size: 0.75rem;
      padding: 0.35rem 0.5rem;
    }
    .btn-download:last-child, .btn-view:last-child {
      margin-bottom: 0;
    }

    /* Hide size column on mobile */
    .table th:nth-child(3),
    .table td:nth-child(3) {
      display: none;
    }

    /* Footer spacing */
    footer .row > div {
      margin-bottom: 1.5rem;
    }
    footer .row > div:last-child {
      margin-bottom: 0;
    }
  }

  /* Small mobile (< 576px) */
  @media (max-width: 575.98px) {
    .hero-card .card-title {
      font-size: 1.25rem;
    }
    .hero-card .lead {
      font-size: 0.85rem;
    }
    .hero-card i {
      font-size: 1.75rem !important;
    }

    .filter-card .card-body {
      max-height: 150px !important;
    }

    .table {
      font-size: 0.75rem;
    }

    /* Hide type column on very small screens */
    .table th:nth-child(2),
    .table td:nth-child(2) {
      display: none;
    }

    .btn-download, .btn-view {
      font-size: 0.7rem;
      padding: 0.3rem 0.4rem;
    }
  }
</style>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="card hero-card">
      <div class="card-body py-4">
        <div class="d-flex align-items-center gap-3 mb-2">
          <i class="bi bi-file-earmark-arrow-down" style="font-size: 2.5rem; color: #e67e22;"></i>
          <h1 class="card-title mb-0">Downloads</h1>
        </div>
        <p class="lead mb-0">Datasheets, manuals, and brochures from chainhoist manufacturers. <strong><%= totalPdfs %></strong> documents available.</p>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-3">
    <div class="card filter-card" style="position: sticky; top: 1rem;">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter by Manufacturer</h5>
      </div>
      <div class="card-body p-0" style="max-height: 500px; overflow-y: auto;">
        <div class="list-group list-group-flush">
          <a href="/downloads" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center filter-link" data-manufacturer="all" aria-label="Show all manufacturers (<%= totalPdfs %> documents)">
            <span><i class="bi bi-grid-3x3-gap me-2"></i>All Manufacturers</span>
            <span class="badge rounded-pill" style="background: var(--brand-secondary);"><%= totalPdfs %></span>
          </a>
          <% manufacturers.forEach(function(mfr) { %>
            <a href="/downloads?manufacturer=<%= encodeURIComponent(mfr) %>"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center filter-link"
               data-manufacturer="<%= mfr %>"
               aria-label="Filter by <%= mfr %> (<%= pdfsByManufacturer[mfr].length %> documents)">
              <span><%= mfr %></span>
              <span class="badge rounded-pill bg-secondary"><%= pdfsByManufacturer[mfr].length %></span>
            </a>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <% manufacturers.forEach(function(mfr) { %>
      <div class="card manufacturer-card mb-4 manufacturer-section" data-manufacturer="<%= mfr %>">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-building"></i> <%= mfr %></h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th style="padding-left: 1.25rem;">Document</th>
                  <th>Type</th>
                  <th>Size</th>
                  <th style="padding-right: 1.25rem;">Action</th>
                </tr>
              </thead>
              <tbody>
                <% pdfsByManufacturer[mfr].forEach(function(pdf) { %>
                  <tr>
                    <td style="padding-left: 1.25rem;">
                      <strong><%= pdf.product %></strong>
                    </td>
                    <td>
                      <% if (pdf.type === 'datasheet') { %>
                        <span class="badge bg-info"><i class="bi bi-file-earmark-spreadsheet me-1"></i>Datasheet</span>
                      <% } else if (pdf.type === 'manual') { %>
                        <span class="badge bg-warning text-dark"><i class="bi bi-book me-1"></i>Manual</span>
                      <% } else if (pdf.type === 'brochure') { %>
                        <span class="badge bg-success"><i class="bi bi-journal-richtext me-1"></i>Brochure</span>
                      <% } else if (pdf.type === 'specification') { %>
                        <span class="badge" style="background: var(--brand-primary);"><i class="bi bi-list-check me-1"></i>Specification</span>
                      <% } else { %>
                        <span class="badge bg-secondary"><i class="bi bi-file-earmark me-1"></i>Document</span>
                      <% } %>
                    </td>
                    <td>
                      <%
                        const sizeKB = (pdf.size / 1024).toFixed(1);
                        const sizeMB = (pdf.size / (1024 * 1024)).toFixed(1);
                      %>
                      <span class="text-muted"><%= pdf.size > 1024 * 1024 ? sizeMB + ' MB' : sizeKB + ' KB' %></span>
                    </td>
                    <td style="padding-right: 1.25rem;">
                      <a href="<%= pdf.url %>" class="btn btn-sm btn-download" target="_blank" download>
                        <i class="bi bi-download me-1"></i>Download
                      </a>
                      <a href="<%= pdf.url %>" class="btn btn-sm btn-view" target="_blank">
                        <i class="bi bi-eye me-1"></i>View
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% }); %>

    <% if (totalPdfs === 0) { %>
      <div class="card manufacturer-card">
        <div class="card-body text-center py-5">
          <i class="bi bi-file-earmark-x" style="font-size: 4rem; color: #dee2e6;"></i>
          <h4 class="mt-3" style="color: var(--brand-primary);">No Documents Available Yet</h4>
          <p class="text-muted mb-4">Product datasheets and manuals will be added soon. In the meantime, you can browse our product database.</p>
          <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
            <a href="/search" class="btn" style="background: var(--brand-primary); color: white;">
              <i class="bi bi-search me-1"></i> Browse Products
            </a>
            <a href="/" class="btn btn-outline-secondary">
              <i class="bi bi-house-door me-1"></i> Return to Home
            </a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<script>
  // Filter function
  function filterManufacturer(manufacturer) {
    // Update active state
    document.querySelectorAll('.filter-link').forEach(item => {
      item.classList.remove('active');
      if (item.dataset.manufacturer === manufacturer) {
        item.classList.add('active');
      }
    });

    // Show/hide sections
    document.querySelectorAll('.manufacturer-section').forEach(section => {
      if (manufacturer === 'all' || section.dataset.manufacturer === manufacturer) {
        section.style.display = 'block';
      } else {
        section.style.display = 'none';
      }
    });
  }

  // Handle filter link clicks (prevent reload, update URL)
  document.querySelectorAll('.filter-link').forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const manufacturer = this.dataset.manufacturer;

      // Update URL without reload
      const url = manufacturer === 'all' ? '/downloads' : '/downloads?manufacturer=' + encodeURIComponent(manufacturer);
      history.pushState({ manufacturer }, '', url);

      // Apply filter
      filterManufacturer(manufacturer);

      // Scroll to top if filtering specific manufacturer
      if (manufacturer !== 'all') {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }
    });
  });

  // Handle browser back/forward
  window.addEventListener('popstate', function(e) {
    const manufacturer = e.state?.manufacturer || new URLSearchParams(window.location.search).get('manufacturer') || 'all';
    filterManufacturer(manufacturer);
  });

  // Apply initial filter from URL on page load
  document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const manufacturer = urlParams.get('manufacturer') || 'all';
    filterManufacturer(manufacturer);
  });
</script>

<%- include('footer') %>
