  <script>
    // Image data for lightbox
    const productImages = [
      <% if (product.images && product.images.length > 0) { %>
        <% product.images.forEach(function(img, index) { %>
          { url: '<%= img.url.replace(/'/g, "\\'") %>', alt: '<%= (img.alt || 'Product image ' + (index + 1)).replace(/'/g, "\\'") %>' }<%= index < product.images.length - 1 ? ',' : '' %>
        <% }); %>
      <% } %>
    ];
    let currentImageIndex = 0;

    function changeMainImage(thumbnail, imageUrl, index) {
      // Update main image
      const mainImage = document.getElementById('mainImage');
      mainImage.src = imageUrl;
      mainImage.dataset.imageIndex = index;
      currentImageIndex = index;

      // Update active thumbnail
      document.querySelectorAll('.product-thumbnail').forEach(function(thumb) {
        thumb.classList.remove('active');
      });
      thumbnail.classList.add('active');
    }

    // Lightbox functionality
    function openLightbox(index) {
      if (productImages.length === 0) return;

      currentImageIndex = index || parseInt(document.getElementById('mainImage').dataset.imageIndex) || 0;
      const overlay = document.getElementById('lightboxOverlay');
      const lightboxImg = document.getElementById('lightboxImage');
      const counter = document.getElementById('lightboxCounter');

      if (!overlay || !lightboxImg) return;

      lightboxImg.src = productImages[currentImageIndex].url;
      lightboxImg.alt = productImages[currentImageIndex].alt;
      if (counter) {
        counter.textContent = `${currentImageIndex + 1} / ${productImages.length}`;
      }

      overlay.classList.add('show');
      document.body.style.overflow = 'hidden';

      // Focus trap
      overlay.focus();
    }

    function closeLightbox() {
      const overlay = document.getElementById('lightboxOverlay');
      if (overlay) {
        overlay.classList.remove('show');
        document.body.style.overflow = '';
      }
    }

    function navigateLightbox(direction) {
      if (productImages.length <= 1) return;

      currentImageIndex = (currentImageIndex + direction + productImages.length) % productImages.length;
      const lightboxImg = document.getElementById('lightboxImage');
      const counter = document.getElementById('lightboxCounter');

      if (lightboxImg) {
        lightboxImg.src = productImages[currentImageIndex].url;
        lightboxImg.alt = productImages[currentImageIndex].alt;
      }
      if (counter) {
        counter.textContent = `${currentImageIndex + 1} / ${productImages.length}`;
      }
    }

    // Keyboard navigation for lightbox
    document.addEventListener('keydown', function(e) {
      const overlay = document.getElementById('lightboxOverlay');
      if (!overlay || !overlay.classList.contains('show')) return;

      switch(e.key) {
        case 'Escape':
          closeLightbox();
          break;
        case 'ArrowLeft':
          navigateLightbox(-1);
          break;
        case 'ArrowRight':
          navigateLightbox(1);
          break;
      }
    });

    // Close lightbox when clicking overlay background
    document.getElementById('lightboxOverlay')?.addEventListener('click', function(e) {
      if (e.target === this) {
        closeLightbox();
      }
    });

    // Loading overlay
    const loadingOverlay = document.getElementById('loadingOverlay');

    function showLoading() {
      loadingOverlay.classList.add('show');
    }

    // Show loading on nav button clicks
    document.querySelectorAll('.product-nav .nav-btn:not(.disabled)').forEach(link => {
      link.addEventListener('click', showLoading);
    });

    // Show loading on similar product clicks
    document.querySelectorAll('.card-body a[href^="/product/"]').forEach(link => {
      link.addEventListener('click', showLoading);
    });

    // Show loading on "Back to search results" click
    document.querySelector('a[href^="/search?"]')?.addEventListener('click', showLoading);

    // Lazy loading image handler - add loaded class when image loads
    document.querySelectorAll('img[loading="lazy"]').forEach(img => {
      if (img.complete) {
        img.classList.add('loaded');
      } else {
        img.addEventListener('load', function() {
          this.classList.add('loaded');
        });
      }
    });

    // Swipe gesture navigation for mobile
    (function() {
      const prevUrl = '<%= prevProduct ? "/product/" + prevProduct.id + (searchContext ? "?" + searchContext : "") : "" %>';
      const nextUrl = '<%= nextProduct ? "/product/" + nextProduct.id + (searchContext ? "?" + searchContext : "") : "" %>';

      if (!prevUrl && !nextUrl) return;

      let touchStartX = 0;
      let touchEndX = 0;
      let touchStartY = 0;
      let touchEndY = 0;
      const minSwipeDistance = 100;
      const maxVerticalDistance = 75;

      const swipeLeft = document.getElementById('swipeLeft');
      const swipeRight = document.getElementById('swipeRight');

      function handleSwipe() {
        const deltaX = touchEndX - touchStartX;
        const deltaY = Math.abs(touchEndY - touchStartY);

        // Ignore if vertical swipe is too large (user is scrolling)
        if (deltaY > maxVerticalDistance) return;

        if (deltaX > minSwipeDistance && prevUrl) {
          // Swipe right - go to previous
          showLoading();
          window.location.href = prevUrl;
        } else if (deltaX < -minSwipeDistance && nextUrl) {
          // Swipe left - go to next
          showLoading();
          window.location.href = nextUrl;
        }
      }

      function showSwipeIndicator(direction, progress) {
        const indicator = direction === 'left' ? swipeRight : swipeLeft;
        if (!indicator) return;

        if (progress > 0.3) {
          indicator.classList.add('visible');
        } else {
          indicator.classList.remove('visible');
        }
      }

      document.addEventListener('touchstart', function(e) {
        // Don't trigger on lightbox or other interactive elements
        if (e.target.closest('.lightbox-overlay, .product-thumbnail, .product-image-gallery, button, a, input, select')) {
          return;
        }
        touchStartX = e.changedTouches[0].screenX;
        touchStartY = e.changedTouches[0].screenY;
      }, { passive: true });

      document.addEventListener('touchmove', function(e) {
        if (e.target.closest('.lightbox-overlay, .product-thumbnail, .product-image-gallery, button, a, input, select')) {
          return;
        }
        const currentX = e.changedTouches[0].screenX;
        const deltaX = currentX - touchStartX;
        const progress = Math.abs(deltaX) / minSwipeDistance;

        if (deltaX > 0 && prevUrl) {
          showSwipeIndicator('right', progress);
        } else if (deltaX < 0 && nextUrl) {
          showSwipeIndicator('left', progress);
        }
      }, { passive: true });

      document.addEventListener('touchend', function(e) {
        if (e.target.closest('.lightbox-overlay, .product-thumbnail, .product-image-gallery, button, a, input, select')) {
          return;
        }
        touchEndX = e.changedTouches[0].screenX;
        touchEndY = e.changedTouches[0].screenY;

        // Hide indicators
        if (swipeLeft) swipeLeft.classList.remove('visible');
        if (swipeRight) swipeRight.classList.remove('visible');

        handleSwipe();
      }, { passive: true });
    })();
  </script>
