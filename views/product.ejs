<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.manufacturer %> <%= product.model %> | Entertainment Industry Chainhoist Database</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --brand-primary: #1a365d;
      --brand-secondary: #e67e22;
      --brand-accent: #27ae60;
    }
    .product-card {
      height: 100%;
      transition: transform 0.2s, box-shadow 0.2s;
      border: 1px solid #e2e8f0;
    }
    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      border-color: var(--brand-secondary);
    }
    .navbar {
      background: linear-gradient(135deg, var(--brand-primary) 0%, #2d4a6f 100%) !important;
    }
    .navbar-brand {
      font-weight: bold;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .navbar-brand .brand-icon {
      font-size: 1.5rem;
      color: var(--brand-secondary);
    }
    .spec-label {
      font-weight: 600;
      color: var(--brand-primary);
    }
    .classification-badge {
      font-size: 0.8rem;
      margin-right: 0.3rem;
      cursor: pointer;
      transition: transform 0.15s;
    }
    .classification-badge:hover {
      transform: scale(1.05);
    }
    .product-main-image {
      max-width: 100%;
      max-height: 300px;
      object-fit: contain;
      border-radius: 8px;
      border: 1px solid #e2e8f0;
      background: #f8f9fa;
    }
    .product-thumbnail {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 4px;
      border: 2px solid transparent;
      cursor: pointer;
      transition: border-color 0.2s;
    }
    .product-thumbnail:hover,
    .product-thumbnail.active {
      border-color: var(--brand-secondary);
    }
    .product-image-gallery {
      display: flex;
      gap: 8px;
      margin-top: 10px;
      flex-wrap: wrap;
    }
    .no-image-placeholder {
      width: 100%;
      height: 200px;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      color: #6c757d;
      font-size: 1.2rem;
      border: 1px dashed #dee2e6;
    }
    .product-nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 0;
      border-bottom: 2px solid #e2e8f0;
      margin-bottom: 1rem;
    }
    .product-nav .nav-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      color: var(--brand-primary);
      padding: 0.5rem 1rem;
      border-radius: 6px;
      transition: all 0.2s;
      font-weight: 500;
    }
    .product-nav .nav-btn:hover {
      background-color: var(--brand-primary);
      color: white;
    }
    .product-nav .nav-btn.disabled {
      color: #adb5bd;
      pointer-events: none;
    }
    .product-nav .nav-info {
      color: #6c757d;
      font-size: 0.9rem;
    }
    .spec-card {
      border: none;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
      border-radius: 12px;
      overflow: hidden;
    }
    .spec-card .card-header {
      background: linear-gradient(135deg, var(--brand-primary) 0%, #2d4a6f 100%);
      color: white;
      font-weight: 600;
      padding: 1rem 1.25rem;
    }
    .spec-card .card-header i {
      color: var(--brand-secondary);
      margin-right: 0.5rem;
    }
    .table td, .table th {
      padding: 0.875rem 0.75rem;
      vertical-align: middle;
    }
    .table tbody tr {
      transition: background-color 0.15s;
    }
    .table tbody tr:hover {
      background-color: #f8fafc !important;
    }
    .section-title {
      color: var(--brand-primary);
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }
    .section-title i {
      color: var(--brand-secondary);
    }
    /* Loading overlay */
    .loading-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(255, 255, 255, 0.8);
      z-index: 9999;
      justify-content: center;
      align-items: center;
    }
    .loading-overlay.show {
      display: flex;
    }
    .loading-spinner {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
    .loading-spinner .spinner-border {
      width: 3rem;
      height: 3rem;
    }

    /* Mobile Responsive Styles */
    @media (max-width: 767.98px) {
      /* Product navigation - stack on mobile */
      .product-nav {
        flex-direction: column;
        gap: 0.75rem;
        text-align: center;
      }
      .product-nav .nav-btn {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
      }
      .product-nav .nav-info {
        order: -1;
        font-size: 0.8rem;
      }

      /* Product card header - smaller text */
      .spec-card .card-header h2 {
        font-size: 1.25rem;
      }
      .spec-card .card-header h4,
      .spec-card .card-header h5 {
        font-size: 1rem;
      }

      /* Section titles - smaller */
      .section-title {
        font-size: 1.1rem;
      }

      /* Tables - horizontal scroll */
      .table-responsive-mobile {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
      }
      .table {
        font-size: 0.875rem;
      }
      .table td, .table th {
        padding: 0.625rem 0.5rem;
        white-space: nowrap;
      }
      .spec-label {
        min-width: 120px;
      }

      /* Image gallery - smaller thumbnails */
      .product-thumbnail {
        width: 60px;
        height: 60px;
      }

      /* Buttons - stack and full width */
      .btn-group-mobile {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }
      .btn-group-mobile .btn {
        width: 100%;
      }

      /* Similar products - more compact */
      .similar-product-item {
        padding: 0.75rem 0;
      }

      /* Footer - stack columns */
      footer .row > div {
        margin-bottom: 1.5rem;
      }
      footer .row > div:last-child {
        margin-bottom: 0;
      }

      /* Breadcrumb - smaller */
      .breadcrumb {
        font-size: 0.8rem;
      }

      /* Back button - full width */
      .btn-back-mobile {
        display: block;
        width: 100%;
        text-align: center;
      }
    }

    /* Small mobile (< 576px) */
    @media (max-width: 575.98px) {
      .product-nav .nav-btn {
        width: 100%;
        justify-content: center;
      }
      .spec-card .card-header h2 {
        font-size: 1.1rem;
      }
      .product-main-image {
        max-height: 200px;
      }
      .no-image-placeholder {
        height: 150px;
      }
    }
  </style>
</head>
<body>
  <!-- Loading Overlay -->
  <div class="loading-overlay" id="loadingOverlay">
    <div class="loading-spinner">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <span class="text-muted">Loading...</span>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="bi bi-link-45deg brand-icon"></i> ChainhoistDB</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/search">Search</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/stats">Statistics</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/downloads">Downloads</a>
          </li>
        </ul>
        <form class="d-flex" action="/search" method="GET">
          <input class="form-control me-2" type="search" name="q" placeholder="Search chainhoists..." aria-label="Search">
          <button class="btn btn-outline-light" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="container mb-5">
    <div class="row mb-4">
  <div class="col-md-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-2">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/search?manufacturer=<%= encodeURIComponent(product.manufacturer) %>"><%= product.manufacturer %></a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= product.model %></li>
      </ol>
    </nav>
    <div class="product-nav">
      <% if (prevProduct) { %>
        <a href="/product/<%= prevProduct.id %><%= searchContext ? '?' + searchContext : '' %>" class="nav-btn" title="<%= prevProduct.manufacturer %> <%= prevProduct.model %>">
          <i class="bi bi-chevron-left d-none d-sm-inline"></i> Prev
        </a>
      <% } else { %>
        <span class="nav-btn disabled"><i class="bi bi-chevron-left d-none d-sm-inline"></i> Prev</span>
      <% } %>
      <span class="nav-info">
        <span class="d-none d-sm-inline">Product </span><%= currentIndex %> of <%= totalProducts %>
        <% if (hasSearchContext) { %>
          <span class="text-muted d-none d-sm-inline">(filtered)</span>
        <% } %>
      </span>
      <% if (nextProduct) { %>
        <a href="/product/<%= nextProduct.id %><%= searchContext ? '?' + searchContext : '' %>" class="nav-btn" title="<%= nextProduct.manufacturer %> <%= nextProduct.model %>">
          Next <i class="bi bi-chevron-right d-none d-sm-inline"></i>
        </a>
      <% } else { %>
        <span class="nav-btn disabled">Next <i class="bi bi-chevron-right d-none d-sm-inline"></i></span>
      <% } %>
    </div>
    <% if (hasSearchContext) { %>
      <div class="mb-3">
        <a href="/search?<%= searchContext %>" class="btn btn-sm btn-back-mobile" style="background: var(--brand-primary); color: white;"><i class="bi bi-arrow-left"></i> Back to search results</a>
      </div>
    <% } %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-8">
    <div class="card spec-card">
      <div class="card-header">
        <h2 class="mb-0"><i class="bi bi-box-seam"></i> <%= product.manufacturer %> <%= product.model %></h2>
      </div>
      <div class="card-body">
        <% if (product.series) { %>
          <p class="text-muted">Series: <%= product.series %></p>
        <% } %>

        <% if (product.classification && Array.isArray(product.classification)) { %>
          <div class="mb-3">
            <% product.classification.forEach(function(cls) { %>
              <a href="/search?classification=<%= encodeURIComponent(cls) %>" class="text-decoration-none"><span class="badge bg-info classification-badge" style="cursor:pointer;"><%= cls.toUpperCase() %></span></a>
            <% }); %>
          </div>
        <% } %>

        <!-- Product Images Section -->
        <div class="row mb-4">
          <div class="col-12">
            <% if (product.images && product.images.length > 0) { %>
              <div class="text-center mb-3">
                <img id="mainImage" src="<%= product.images[0].url %>"
                     alt="<%= product.images[0].alt || product.manufacturer + ' ' + product.model %>"
                     class="product-main-image"
                     onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'no-image-placeholder\'>Image unavailable</div>';">
              </div>
              <% if (product.images.length > 1) { %>
              <div class="product-image-gallery justify-content-center">
                <% product.images.forEach(function(img, index) { %>
                  <img src="<%= img.url %>"
                       alt="<%= img.alt || 'Product image ' + (index + 1) %>"
                       class="product-thumbnail <%= index === 0 ? 'active' : '' %>"
                       onclick="changeMainImage(this, '<%= img.url.replace(/'/g, "\\'") %>')"
                       onerror="this.style.display='none'">
                <% }); %>
              </div>
              <% } %>
            <% } else { %>
              <div class="no-image-placeholder">
                <i class="bi bi-camera" style="font-size: 3rem; opacity: 0.5;"></i>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Product Videos Section -->
        <% if (product.videos && product.videos.length > 0) { %>
        <div class="row mb-4">
          <div class="col-12">
            <h4 class="section-title"><i class="bi bi-play-circle"></i> Product Videos</h4>
            <div class="row">
              <% product.videos.slice(0, 4).forEach(function(video, index) { %>
                <div class="col-md-6 mb-3">
                  <% if (video.type === 'youtube') { %>
                    <div class="ratio ratio-16x9">
                      <iframe src="<%= video.embed %>"
                              title="Product Video <%= index + 1 %>"
                              frameborder="0"
                              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                              allowfullscreen>
                      </iframe>
                    </div>
                  <% } else if (video.type === 'vimeo') { %>
                    <div class="ratio ratio-16x9">
                      <iframe src="<%= video.embed %>"
                              title="Product Video <%= index + 1 %>"
                              frameborder="0"
                              allow="autoplay; fullscreen; picture-in-picture"
                              allowfullscreen>
                      </iframe>
                    </div>
                  <% } else if (video.type === 'mp4') { %>
                    <div class="ratio ratio-16x9">
                      <video controls preload="metadata">
                        <source src="<%= video.url %>" type="video/mp4">
                        Your browser does not support the video tag.
                      </video>
                    </div>
                  <% } %>
                </div>
              <% }); %>
            </div>
            <% if (product.videos.length > 4) { %>
              <p class="text-muted"><small>Showing 4 of <%= product.videos.length %> videos</small></p>
            <% } %>
          </div>
        </div>
        <% } %>

        <div class="row mt-4">
          <div class="col-md-6">
            <h4 class="section-title"><i class="bi bi-gear"></i> Technical Specifications</h4>
            <table class="table table-striped">
              <tbody>
                <% if (product.loadCapacity) { %>
                <tr>
                  <td class="spec-label">Load Capacity</td>
                  <td><%= product.loadCapacity %></td>
                </tr>
                <% } %>
                <% if (product.liftingSpeed) { %>
                <tr>
                  <td class="spec-label">Lifting Speed</td>
                  <td><%= product.liftingSpeed %></td>
                </tr>
                <% } %>
                <% if (product.secondarySpeed) { %>
                <tr>
                  <td class="spec-label">Secondary Speed</td>
                  <td><%= product.secondarySpeed %></td>
                </tr>
                <% } %>
                <% if (product.chainFall) { %>
                <tr>
                  <td class="spec-label">Chain Fall</td>
                  <td><%= product.chainFall %></td>
                </tr>
                <% } %>
                <% if (product.motorPower) { %>
                <tr>
                  <td class="spec-label">Motor Power</td>
                  <td><%= product.motorPower %></td>
                </tr>
                <% } %>
                <% if (product.dutyCycle) { %>
                <tr>
                  <td class="spec-label">Duty Cycle</td>
                  <td><%= product.dutyCycle %></td>
                </tr>
                <% } %>
                <% if (product.voltageOptions && (Array.isArray(product.voltageOptions) ? product.voltageOptions.length > 0 : true)) { %>
                <tr>
                  <td class="spec-label">Voltage Options</td>
                  <td>
                    <% if (Array.isArray(product.voltageOptions)) { %>
                      <%= product.voltageOptions.join(', ') %>
                    <% } else { %>
                      <%= product.voltageOptions %>
                    <% } %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <%
          // Check if any entertainment specs exist
          const hasEntertainmentSpecs = product.quietOperation || product.bodyColor || product.dynamicLifting || product.liftingOverPeople || product.commonApplications;
          // Check if any safety specs exist
          const hasSafetySpecs = product.upperLimitSwitch || product.lowerLimitSwitch || product.overloadProtection || product.emergencyStop || product.additionalSafety;
        %>
        <% if (hasEntertainmentSpecs || hasSafetySpecs) { %>
        <div class="row mt-4">
          <% if (hasEntertainmentSpecs) { %>
          <div class="col-md-6">
            <h4 class="section-title"><i class="bi bi-stars"></i> Entertainment Industry Specifics</h4>
            <table class="table table-striped">
              <tbody>
                <% if (product.quietOperation !== undefined) { %>
                <tr>
                  <td class="spec-label">Quiet Operation</td>
                  <td><%= product.quietOperation ? 'Yes' : 'No' %></td>
                </tr>
                <% } %>
                <% if (product.bodyColor) { %>
                <tr>
                  <td class="spec-label">Body Color</td>
                  <td>
                    <% if (Array.isArray(product.bodyColor)) { %>
                      <%= product.bodyColor.join(', ') %>
                    <% } else { %>
                      <%= product.bodyColor %>
                    <% } %>
                  </td>
                </tr>
                <% } %>
                <% if (product.dynamicLifting !== undefined) { %>
                <tr>
                  <td class="spec-label">Dynamic Lifting Approved</td>
                  <td><%= product.dynamicLifting ? 'Yes' : 'No' %></td>
                </tr>
                <% } %>
                <% if (product.liftingOverPeople !== undefined) { %>
                <tr>
                  <td class="spec-label">Lifting Over People Approved</td>
                  <td><%= product.liftingOverPeople ? 'Yes' : 'No' %></td>
                </tr>
                <% } %>
                <% if (product.commonApplications) { %>
                <tr>
                  <td class="spec-label">Common Applications</td>
                  <td>
                    <% if (Array.isArray(product.commonApplications)) { %>
                      <%= product.commonApplications.join(', ') %>
                    <% } else { %>
                      <%= product.commonApplications %>
                    <% } %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <% } %>

          <% if (hasSafetySpecs) { %>
          <div class="col-md-6">
            <h4 class="section-title"><i class="bi bi-shield-check"></i> Safety Features</h4>
            <table class="table table-striped">
              <tbody>
                <% if (product.upperLimitSwitch) { %>
                <tr>
                  <td class="spec-label">Upper Limit Switch</td>
                  <td><%= product.upperLimitSwitch %></td>
                </tr>
                <% } %>
                <% if (product.lowerLimitSwitch) { %>
                <tr>
                  <td class="spec-label">Lower Limit Switch</td>
                  <td><%= product.lowerLimitSwitch %></td>
                </tr>
                <% } %>
                <% if (product.overloadProtection) { %>
                <tr>
                  <td class="spec-label">Overload Protection</td>
                  <td><%= product.overloadProtection %></td>
                </tr>
                <% } %>
                <% if (product.emergencyStop) { %>
                <tr>
                  <td class="spec-label">Emergency Stop</td>
                  <td><%= product.emergencyStop %></td>
                </tr>
                <% } %>
                <% if (product.additionalSafety) { %>
                <tr>
                  <td class="spec-label">Additional Safety Features</td>
                  <td>
                    <% if (Array.isArray(product.additionalSafety)) { %>
                      <%= product.additionalSafety.join(', ') %>
                    <% } else { %>
                      <%= product.additionalSafety %>
                    <% } %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
        <% } %>
        
        <% if (product.variableSpeedControl || product.tuningParameters) { %>
        <div class="row mt-4">
          <% if (product.variableSpeedControl) { %>
          <div class="col-md-6">
            <h4 class="section-title"><i class="bi bi-speedometer2"></i> Speed Control Parameters</h4>
            <table class="table table-striped">
              <tbody>
                <% if (product.variableSpeedControl.minSpeed) { %>
                <tr>
                  <td class="spec-label">Min Speed</td>
                  <td><%= product.variableSpeedControl.minSpeed %></td>
                </tr>
                <% } %>
                <% if (product.variableSpeedControl.maxSpeed) { %>
                <tr>
                  <td class="spec-label">Max Speed</td>
                  <td><%= product.variableSpeedControl.maxSpeed %></td>
                </tr>
                <% } %>
                <% if (product.variableSpeedControl.defaultSpeed) { %>
                <tr>
                  <td class="spec-label">Default Speed</td>
                  <td><%= product.variableSpeedControl.defaultSpeed %></td>
                </tr>
                <% } %>
                <% if (product.variableSpeedControl.maxAccel) { %>
                <tr>
                  <td class="spec-label">Max Acceleration</td>
                  <td><%= product.variableSpeedControl.maxAccel %></td>
                </tr>
                <% } %>
                <% if (product.variableSpeedControl.maxDecel) { %>
                <tr>
                  <td class="spec-label">Max Deceleration</td>
                  <td><%= product.variableSpeedControl.maxDecel %></td>
                </tr>
                <% } %>
                <% if (product.variableSpeedControl.errorStop) { %>
                <tr>
                  <td class="spec-label">Error Stop</td>
                  <td><%= product.variableSpeedControl.errorStop %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <% } %>

          <% if (product.tuningParameters && Object.keys(product.tuningParameters).length > 0) { %>
          <div class="col-md-6">
            <h4 class="section-title"><i class="bi bi-sliders"></i> Tuning Parameters</h4>
            <table class="table table-striped">
              <tbody>
                <% Object.entries(product.tuningParameters).forEach(function([key, value]) { %>
                <% if (value) { %>
                <tr>
                  <td class="spec-label"><%= key %></td>
                  <td><%= value %></td>
                </tr>
                <% } %>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
        <% } %>

        <% if (product.underloadLimit || product.overloadLimit || product.encoderScaling || product.loadcellScaling || product.category || product.speedType) { %>
        <div class="row mt-4">
          <% if (product.underloadLimit || product.overloadLimit || product.encoderScaling || product.loadcellScaling) { %>
          <div class="col-md-6">
            <h4 class="section-title"><i class="bi bi-graph-up"></i> Load & Encoder Parameters</h4>
            <table class="table table-striped">
              <tbody>
                <% if (product.underloadLimit) { %>
                <tr>
                  <td class="spec-label">Underload Limit</td>
                  <td><%= product.underloadLimit %></td>
                </tr>
                <% } %>
                <% if (product.overloadLimit) { %>
                <tr>
                  <td class="spec-label">Overload Limit</td>
                  <td><%= product.overloadLimit %></td>
                </tr>
                <% } %>
                <% if (product.loadcellScaling) { %>
                <tr>
                  <td class="spec-label">Loadcell Scaling</td>
                  <td><%= product.loadcellScaling %></td>
                </tr>
                <% } %>
                <% if (product.encoderScaling) { %>
                <tr>
                  <td class="spec-label">Encoder Scaling</td>
                  <td><%= product.encoderScaling %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <% } %>
          <% if (product.category || product.speedType) { %>
          <div class="col-md-6">
            <h4 class="section-title"><i class="bi bi-tags"></i> Classification</h4>
            <table class="table table-striped">
              <tbody>
                <% if (product.category) { %>
                <tr>
                  <td class="spec-label">Category</td>
                  <td><%= product.category %></td>
                </tr>
                <% } %>
                <% if (product.speedType) { %>
                <tr>
                  <td class="spec-label">Speed Type</td>
                  <td>
                    <% if (product.speedType === 'Variable Speed') { %>
                      <span class="badge bg-success">Variable Speed</span>
                    <% } else if (product.speedType === 'Fixed Speed') { %>
                      <span class="badge bg-warning">Fixed Speed</span>
                    <% } else { %>
                      <%= product.speedType %>
                    <% } %>
                  </td>
                </tr>
                <% } %>
                <% if (product.entertainmentIndustry !== undefined) { %>
                <tr>
                  <td class="spec-label">Entertainment Industry</td>
                  <td>
                    <% if (product.entertainmentIndustry) { %>
                      <span class="badge bg-info">Yes</span>
                    <% } else { %>
                      No
                    <% } %>
                  </td>
                </tr>
                <% } %>
                <% if (product.source) { %>
                <tr>
                  <td class="spec-label">Data Source</td>
                  <td><%= product.source === 'personality' ? 'Personality XML' : 'Web Scraped' %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
        <% } %>

        <% if (product.url || product.datasheet) { %>
          <div class="mt-4 btn-group-mobile">
            <% if (product.url) { %>
              <a href="<%= product.url %>" target="_blank" class="btn" style="background: var(--brand-secondary); color: white;">
                <i class="bi bi-box-arrow-up-right"></i> View Original Source
              </a>
            <% } %>
            <% if (product.datasheet) { %>
              <a href="<%= product.datasheet %>" target="_blank" class="btn btn-outline-primary">
                <i class="bi bi-file-earmark-pdf"></i> Download Datasheet
              </a>
            <% } %>
          </div>
        <% } %>

        <% if (product.pdfs && product.pdfs.length > 0) { %>
          <div class="mt-4">
            <h5 class="section-title"><i class="bi bi-file-earmark-text"></i> Available Documents</h5>
            <div class="list-group">
              <% product.pdfs.forEach(function(pdf) { %>
                <a href="<%= pdf.url %>" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  <span>
                    <% if (pdf.type === 'datasheet') { %>
                      <span class="badge bg-info me-2">Datasheet</span>
                    <% } else if (pdf.type === 'manual') { %>
                      <span class="badge bg-warning text-dark me-2">Manual</span>
                    <% } else if (pdf.type === 'brochure') { %>
                      <span class="badge bg-success me-2">Brochure</span>
                    <% } else { %>
                      <span class="badge bg-secondary me-2">Document</span>
                    <% } %>
                    <%= pdf.title || 'Download PDF' %>
                  </span>
                  <span class="text-muted small">PDF</span>
                </a>
              <% }); %>
            </div>
          </div>
        <% } %>

        <% if (product.downloadedPDFs && product.downloadedPDFs.length > 0) { %>
          <div class="mt-4">
            <h5 class="section-title"><i class="bi bi-download"></i> Downloaded Documents</h5>
            <div class="list-group">
              <% product.downloadedPDFs.forEach(function(pdf) { %>
                <a href="/media/pdfs/<%= pdf.localPath.split(/[/\\]/).pop() %>" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  <span>
                    <% if (pdf.type === 'datasheet') { %>
                      <span class="badge bg-info me-2">Datasheet</span>
                    <% } else if (pdf.type === 'manual') { %>
                      <span class="badge bg-warning text-dark me-2">Manual</span>
                    <% } else if (pdf.type === 'brochure') { %>
                      <span class="badge bg-success me-2">Brochure</span>
                    <% } else { %>
                      <span class="badge bg-secondary me-2">Document</span>
                    <% } %>
                    <%= pdf.title || 'Download PDF' %>
                  </span>
                  <span class="text-muted small">Local</span>
                </a>
              <% }); %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card spec-card">
      <div class="card-header">
        <h4 class="mb-0"><i class="bi bi-collection"></i> Similar Products</h4>
      </div>
      <div class="card-body">
        <% if (similarProducts.length > 0) { %>
          <% similarProducts.forEach(function(similar) { %>
            <div class="mb-3 pb-3 border-bottom">
              <h6><a href="/product/<%= similar.id %>"><%= similar.manufacturer %> <%= similar.model %></a></h6>
              <% if (similar.loadCapacity) { %>
                <small class="text-muted">Capacity: <%= similar.loadCapacity %></small>
              <% } %>
            </div>
          <% }); %>
        <% } else { %>
          <p class="text-muted">No similar products found.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>
  </div>

  <footer class="py-4 mt-5" style="background: linear-gradient(135deg, var(--brand-primary) 0%, #2d4a6f 100%);">
    <div class="container">
      <div class="row text-white">
        <div class="col-md-6">
          <h5><i class="bi bi-link-45deg" style="color: var(--brand-secondary);"></i> ChainhoistDB</h5>
          <p class="opacity-75">A comprehensive collection of electric chainhoists used in the entertainment industry.</p>
        </div>
        <div class="col-md-3">
          <h5>Quick Links</h5>
          <ul class="list-unstyled">
            <li><a href="/" class="text-white text-decoration-none opacity-75">Home</a></li>
            <li><a href="/stats" class="text-white text-decoration-none opacity-75">Statistics</a></li>
            <li><a href="/search" class="text-white text-decoration-none opacity-75">Search</a></li>
            <li><a href="/downloads" class="text-white text-decoration-none opacity-75">Downloads</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h5>Disclaimer</h5>
          <p class="small opacity-75">This database is for informational purposes only. Always consult manufacturer specifications for critical applications.</p>
        </div>
      </div>
      <hr class="opacity-25">
      <p class="text-center text-white opacity-75 mb-0">&copy; <%= new Date().getFullYear() %> ChainhoistDB</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    function changeMainImage(thumbnail, imageUrl) {
      // Update main image
      document.getElementById('mainImage').src = imageUrl;

      // Update active thumbnail
      document.querySelectorAll('.product-thumbnail').forEach(function(thumb) {
        thumb.classList.remove('active');
      });
      thumbnail.classList.add('active');
    }

    // Loading overlay
    const loadingOverlay = document.getElementById('loadingOverlay');

    function showLoading() {
      loadingOverlay.classList.add('show');
    }

    // Show loading on nav button clicks
    document.querySelectorAll('.product-nav .nav-btn:not(.disabled)').forEach(link => {
      link.addEventListener('click', showLoading);
    });

    // Show loading on similar product clicks
    document.querySelectorAll('.card-body a[href^="/product/"]').forEach(link => {
      link.addEventListener('click', showLoading);
    });

    // Show loading on "Back to search results" click
    document.querySelector('a[href^="/search?"]')?.addEventListener('click', showLoading);
  </script>
</body>
