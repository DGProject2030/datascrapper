{
  "name": "entertainment-chainhoist-database",
  "version": "2.0.0",
  "description": "Enhanced comprehensive database of electric chainhoists for the entertainment industry with REST API, advanced validation, and export capabilities",
  "main": "server.js",
  "scripts": {
    "scrape": "node chainhoist-scraper.js",
    "scrape:enhanced": "node chainhoist-scraper-enhanced.js",
    "scrape:full": "node chainhoist-scraper-enhanced.js",
    "process": "node chainhoist-data-processor.js",
    "serve": "node server.js",
    "viewer": "node server.js",
    "build": "npm run scrape && npm run process",
    "start": "npm run serve",
    "dev": "npm run serve",
    "test": "jest --verbose",
    "test:coverage": "jest --verbose --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "export:csv": "node -e \"require('./export-tools').exportCSV()\"",
    "export:json": "node -e \"require('./export-tools').exportJSON()\"",
    "validate": "node -e \"require('./validation-tools').validateDatabase()\"",
    "stats": "node -e \"require('./stats-tools').generateReport()\""
  },
  "keywords": [
    "chainhoist",
    "entertainment",
    "rigging",
    "database",
    "scraping",
    "d8",
    "bgv-c1",
    "theater",
    "stage",
    "api",
    "rest"
  ],
  "author": "DataScrapper Enhanced",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "."
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "crawlee": "^3.6.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "json2csv": "^5.0.7",
    "lodash": "^4.17.21",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.js"],
    "verbose": true,
    "collectCoverageFrom": [
      "app.js",
      "server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 50,
        "lines": 45,
        "statements": 45
      }
    }
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ]
}
