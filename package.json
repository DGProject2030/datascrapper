{
  "name": "entertainment-chainhoist-database",
  "version": "2.3.0",
  "description": "Enhanced comprehensive database of electric chainhoists for the entertainment industry with REST API, advanced validation, and export capabilities",
  "main": "server.js",
  "scripts": {
    "scrape": "node chainhoist-scraper.js",
    "scrape:enhanced": "node chainhoist-scraper-enhanced.js",
    "scrape:full": "node chainhoist-scraper-enhanced.js",
    "scrape:llm": "node chainhoist-scraper-enhanced.js --with-llm",
    "process": "node chainhoist-data-processor.js",
    "serve": "node server.js",
    "viewer": "node server.js",
    "build": "npm run scrape && npm run process",
    "build:llm": "npm run scrape:llm && npm run process",
    "start": "npm run serve",
    "dev": "npm run serve",
    "test": "jest --verbose",
    "test:coverage": "jest --verbose --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "export:csv": "node -e \"require('./export-tools').exportCSV()\"",
    "export:json": "node -e \"require('./export-tools').exportJSON()\"",
    "validate": "node -e \"require('./validation-tools').validateDatabase()\"",
    "stats": "node -e \"require('./stats-tools').generateReport()\"",
    "scheduler:start": "node scheduler.js start",
    "scheduler:run": "node scheduler.js run-now",
    "scheduler:status": "node scheduler.js status",
    "personality:parse": "node personality-parser.js parse",
    "personality:enrich": "node personality-web-scraper.js enrich",
    "merge": "node merge-databases.js",
    "build:full": "npm run personality:parse && npm run personality:enrich && npm run merge",
    "prepare": "husky"
  },
  "keywords": [
    "chainhoist",
    "entertainment",
    "rigging",
    "database",
    "scraping",
    "d8",
    "bgv-c1",
    "theater",
    "stage",
    "api",
    "rest"
  ],
  "author": "DataScrapper Enhanced",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crawlee": "^3.6.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "json2csv": "^5.0.7",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "openai": "^6.16.0",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.14.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "app.js",
      "server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 50,
        "lines": 40,
        "statements": 40
      }
    }
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
